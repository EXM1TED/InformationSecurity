<Application x:Class="InformationSecurity.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:InformationSecurity"
             StartupUri="Views\OrganizerWindow.xaml">
    <Application.Resources>
        <Style x:Key="ButtonOrganizer" TargetType="Button">
            <Setter Property="Width" Value="205"/>
            <Setter Property="Height" Value="70"/>
        </Style>

        <Style x:Key="InputFieldHeaderJury" TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="Padding" Value="0 0 10 0"/>
            <Setter Property="Width" Value="115"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
    </Application.Resources>
</Application>
